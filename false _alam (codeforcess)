#include<stdio.h>
int main()
{
    int t;
    scanf("%d",&t);
    while(t--){
        int n,x;
        scanf("%d %d",&n,&x);

        int a[15];
        for(int i=0;i<n;i++){
            scanf("%d",&a[i]);
        }
        
        int used_button=0;
        int timer=0;
        int ok=1;

        for(int i=0;i<n;i++){
            if(a[i]==0||timer>0){
                if(timer>0)timer--;
            }

            else{
                if(! used_button){
                    used_button=1;
                    timer=x-1;
                }
                else{
                    ok=0;
                    break;
                }
            }
        }
        if(ok)
        printf("Yes\n");
        else
        printf("No\n");
    }
}
